{
  "name": "ts-test-framework",
  "version": "1.0.0",
  "description": "A reusable TypeScript test automation framework using Cucumber, Playwright, and Allure",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:smoke": "cucumber-js --tags '@smoke'",
    "test:regression": "cucumber-js --tags '@regression'",
    "test:login": "cucumber-js --tags \"@authentication\"",
    "test:todos": "cucumber-js --tags '@todos'",
    "test:parallel": "cucumber-js --parallel 2",
    "test:headless": "HEADLESS=true cucumber-js",
    "test:headed": "HEADLESS=false cucumber-js",
    "test:chrome": "BROWSER=chromium cucumber-js",
    "test:firefox": "BROWSER=firefox cucumber-js",
    "test:webkit": "BROWSER=webkit cucumber-js",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "clean": "rimraf allure-results allure-report dist",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "typescript",
    "cucumber",
    "playwright",
    "allure",
    "bdd",
    "testing",
    "automation",
    "framework"
  ],
  "author": "Test Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/messages": "^31.0.0",
    "@playwright/test": "^1.56.1",
    "@types/dotenv": "^8.2.3",
    "@types/node": "^24.10.1",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.4.2",
    "allure-js-commons": "^3.4.2",
    "allure-playwright": "^3.4.2",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
